{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI (Poetry)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "finance_ai.app:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "python": "${workspaceFolder}/.venv/bin/python"
    }
  ]
}